<Window x:Class="FinalExam2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExam2025"
        mc:Ignorable="d"
        Title="Liam and Noels Ticket Oasis" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Events" HorizontalAlignment="Left" Margin="64,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxSearch" HorizontalAlignment="Left" Margin="263,53,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120"/>
        <Label Content="Tickets" HorizontalAlignment="Left" Margin="462,49,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxEvents" HorizontalAlignment="Left" Height="263" Margin="64,89,0,0" VerticalAlignment="Top" Width="319" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ListBox x:Name="lbxTickets" HorizontalAlignment="Left" Height="263" Margin="416,89,0,0" VerticalAlignment="Top" Width="322" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="481,373,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxNumberOfTickets" HorizontalAlignment="Left" Margin="554,377,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnBook" Content="Book" HorizontalAlignment="Left" Margin="698,375,0,0" VerticalAlignment="Top" Click="btnBook_Click"/>

    </Grid>
</Window>
